<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="/image/banner/sunflower1.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Sunflower Services</h2>
                    <div class="breadcrumb__option">
                        <a href="/home">Home</a>
                        <span>Shop</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->

<!-- Product Section Begin -->
<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-5">
                <div class="sidebar">
                    <form>
                        <div class="sidebar__item">
                            <h4>Filter by Department</h4>
                            <input type="radio" id="cat1" name="category" value="1">
                            <label for="cat1">Dry Cleaning</label><br>
                            <input type="radio" id="cat2" name="category" value="2">
                            <label for="cat2">Laundry Cleaning</label><br>
                            <input type="radio" id="cat3" name="category" value="3">
                            <label for="cat3">Shoes Cleaning</label><br>
                            <input type="radio" id="cat4" name="category" value="4">
                            <label for="cat4">Furniture Cleaning</label><br>
                            <input type="radio" id="cat5" name="category" value="5">
                            <label for="cat5">Stuffed dolls cleaning</label><br>
                        </div>
                        <div class="sidebar__item">
                            <h4>Filter by Price</h4>
                            <div class="price-range-wrap">
                                <div class="price-range ui-slider ui-corner-all ui-slider-horizontal ui-widget ui-widget-content"
                                    data-min="10000" data-max="50000">
                                    <div class="ui-slider-range ui-corner-all ui-widget-header"></div>
                                    <span tabindex="0" class="ui-slider-handle ui-corner-all ui-state-default"></span>
                                    <span tabindex="0" class="ui-slider-handle ui-corner-all ui-state-default"></span>
                                </div>
                                <div class="range-slider">
                                    <div class="price-input d-flex justify-content-between">
                                        <input name="from" type="text" id="minamount">
                                        <input name="to" type="text" id="maxamount">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <button type="submit">SUBMIT</button>
                    </form>
                </div>
            </div>
            <div class="col-lg-9 col-md-7">
                <div class="product__discount">
                    <div class="filter__item">
                        <div class="row">
                            <div class="col-lg-4 col-md-5">
                                <div class="filter__sort">
                                    <span>Sort By</span>
                                    <select name="sort">
                                        <option value="1">Ascending Price</option>
                                        <option value="2">Descending Price</option>
                                        <option value="3">Highest rating</option>
                                        <option value="4">Latest</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-4">
                                <div class="filter__found">
                                    <h6><span>{{countResult}}</span> service(s) found</h6>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-3">
                                <div class="filter__option">
                                    <span class="icon_grid-2x2"></span>
                                    <span class="icon_ul"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" id="service-partial">
                        {{#each_fromto services pagination_info.first_result pagination_info.last_result}}
                        <div class="col-lg-4 col-md-6 col-sm-6">
                            <div class="product__item">
                                <div class="product__item__pic set-bg" data-setbg="{{image}}"
                                    style="background-image: url('{{image}}');">
                                    <ul class="product__item__pic__hover">
                                        <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                        <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                        <li><button class="service-btn" onclick="addSer(this.value)"
                                                value="{{idservice}}">
                                                <a><i class="fa fa-shopping-cart"></i></a></button>
                                        </li>
                                    </ul>
                                </div>
                                <div class="product__item__text">
                                    <h6><a href="services/{{idservice}}">{{servicename}}</a></h6>
                                    <h5>{{price}} VNƒê</h5>
                                </div>
                            </div>
                        </div>
                        {{/each_fromto}}
                    </div>
                    <div id="paginator-items" class="product__pagination text-center">

                        {{!-- <a href="{{originalUrl}}&page=1">First</a> --}}

                        {{#if pagination_info.has_previous_page}}
                        <button class="service-btn" onclick="paginationDisplay(this.value)"
                            value="{{pagination_info.previous_page}}">
                            <a><i class="fa fa-long-arrow-left"></i></a>
                        </button>
                        {{/if}}

                        {{#for pagination_info.first_page pagination_info.last_page 1 originalUrl}}
                            <button class="service-btn" onclick="paginationDisplay(this.value)" value="{{@index}}">
                                <a>{{@index}}</a>
                            </button>
                        {{/for}}

                        {{#if pagination_info.has_next_page}}
                        <button class="service-btn" onclick="paginationDisplay(this.value)"
                            value="{{pagination_info.next_page}}">
                            <a><i class="fa fa-long-arrow-right"></i></a>
                        </button>

                        {{/if}}

                        {{!-- <a href="{{originalUrl}}&page={{pagination_info.total_pages}}">Last</a> --}}
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>
<!-- Product Section End -->