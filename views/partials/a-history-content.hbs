<!-- ============================================================== -->
<div class="container-fluid">
    <!-- ============================================================== -->
    <!-- RECENT SALES -->
    <!-- ============================================================== -->
    <div class="row">
        <div class="col-md-12 col-lg-12 col-sm-12">
            <div class="white-box">
                <form action="">
                    <div class="row">
                        <div class="col-8 d-md-flex mb-3">
                            <select name="filter" class="form-select shadow-none row border-top">
                                <option value="2">Filter</option>
                                <option value="0">Available orders</option>
                                <option value="1">Completed orders</option>
                            </select>
                        </div>
                        <div class="col-md-3 col-sm-4 col-xs-6 ms-auto">
                            <select name="sort" class="form-select shadow-none row border-top">
                                <option value="0">Sort by</option>
                                <option value="1">Oldest order</option>
                                <option value="2">Latest order</option>
                            </select>
                        </div>
                        <div class="col-md-3 col-sm-4 col-xs-6 ms-auto"></div>
                        <button class="site-btn">REFRESH</button>
                    </div>
                    <div class="row">
                </form>
                <div class="table-responsive">
                    <table class="table no-wrap">
                        <thead>
                            <tr>
                                <th class="border-top-0">No.</th>
                                <th class="border-top-0">ID Order</th>
                                <th class="border-top-0">ID Customer</th>
                                <th class="border-top-0">Status</th>
                                {{!-- <th class="border-top-0">Date</th> --}}
                                <th class="border-top-0">Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each orders}}
                            <tr>
                                <td></td>
                                <td>{{idorder}}</td>
                                <td>{{idcustomer}}</td>
                                <td class="txt-oflo">{{statusname}}</td>
                                {{!-- <td><span class="text-success">{{time}}</span></td> --}}
                                <td>{{totalprice}}</td>
                                {{#if status}}
                                {{else}}
                                <td><button class="site-btn" value="{{idorder}}"
                                        onclick="updateStatus(this.value)">COMPLETE</button></td>
                                {{/if}}
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>