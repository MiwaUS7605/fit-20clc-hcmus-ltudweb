<!-- ============================================================== -->
<div class="container-fluid">
    <!-- ============================================================== -->
    <!-- RECENT SALES -->
    <!-- ============================================================== -->
    <div class="row">
        <div class="col-md-12 col-lg-12 col-sm-12">
            <div class="white-box">
                <form action="">

                    <div class="row">
                        <div class="d-md-flex mb-6  ms-auto">
                        <div class="app-search d-none d-md-block me-8">
                            <input name="search" type="text" placeholder="Search account..." class="">
                            <button type="submit" class="site-btn"><i class="fa fa-search"></i></button>
                            {{!-- <a href="" class="active">
                                <i class="fa fa-search"></i>
                            </a> --}}
                        </div>
                        <div class="col-8 d-md-flex mb-3">
                        {{!-- <h3 class="box-title mb-0">Sort by</h3> --}}
                        <div class="col-md-3 col-sm-4 col-xs-6 ms-auto">
                            <select name="sort" class="form-select shadow-none row border-top">
                                <option value="0">Sort by</option>
                                <option value="1">A-Z name</option>
                                <option value="2">Z-A name</option>
                                <option value="3">A-Z email</option>
                                <option value="4">Z-A email</option>
                                <option value="5">Latest registration time</option>
                            </select>
                        </div>
                    </div>
                </form>                
                
                </div>
                
                <div class="table-responsive">
                    <table class="table no-wrap">
                        <thead>
                            <tr>
                                <th class="border-top-0">No.</th>
                                <th class="border-top-0">Name</th>
                                <th class="border-top-0">Phone number</th>
                                <th class="border-top-0">Address</th>
                                <th class="border-top-0">Email</th>
                                <th class="border-top-0">Ban/Unban</th>
                            </tr>
                        </thead>
                        <tbody id="table-pagination">
                            {{#each_fromto accounts pagination_info.first_result pagination_info.last_result}}
                                    <td></td>
                                    <td class="txt-oflo">{{name}}</td>
                                    <td>{{phonenumber}}</td>
                                    <td class="txt-oflo">{{address}}</td>
                                    <td><span class="text-success">{{email}}</span></td>
                                    <td><button class="site-btn">BAN</button></td>
                                </tr>
                            {{/each_fromto}}
                            
                        </tbody>
                    </table>
                </div>
                <div id="paginator-items" class="product__pagination text-center">

                        {{!-- <a href="{{originalUrl}}&page=1">First</a> --}}

                        {{#if pagination_info.has_previous_page}}
                        <button class="service-btn" onclick="paginationDisplay(this.value)"
                            value="{{pagination_info.previous_page}}">
                            <a><i class="fa fa-long-arrow-left"></i></a>
                        </button>
                        {{/if}}

                        {{#for pagination_info.first_page pagination_info.last_page 1 originalUrl}}
                            <button class="service-btn" onclick="paginationDisplay(this.value)" value="{{@index}}">
                                <a>{{@index}}</a>
                            </button>
                        {{/for}}

                        {{#if pagination_info.has_next_page}}
                        <button class="service-btn" onclick="paginationDisplay(this.value)"
                            value="{{pagination_info.next_page}}">
                            <a><i class="fa fa-long-arrow-right"></i></a>
                        </button>

                        {{/if}}

                        {{!-- <a href="{{originalUrl}}&page={{pagination_info.total_pages}}">Last</a> --}}
                    </div>
            </div>
        </div>
    </div>
</div>